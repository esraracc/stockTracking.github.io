@model RegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="~/userTemplate/tekmer-logo1.jpg" alt="logo">
    </div>
    <h4>Burada yeni misin?</h4>
    <h6 class="font-weight-light">Kaydolmak kolaydır. Sadece birkaç adım alır</h6>
    <form asp-controller="Account" asp-action="Register" method="post" class="pt-3">
        
        <div class="form-group">
            <input type="text" asp-for="FirstName" class="form-control form-control-lg" placeholder="Yetkili Adı">
        </div>
        <div class="form-group">
            <input type="text" asp-for="LastName" class="form-control form-control-lg" placeholder="Yetkili Soyadı">
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="E-Posta">
        </div>
        <div class="form-group">
            <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Telefon Numarası">
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Şifre">
        </div>
        <div class="form-group">
            <input type="password" asp-for="RePassword" class="form-control form-control-lg" placeholder="Şifre Tekrar">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
        </div>
        <div class="text-center mt-4 font-weight-light">
            Zaten hesabınız var mı? <a href="/account/login" class="text-primary">Giriş Yap</a>
        </div>
    </form>
</div>
