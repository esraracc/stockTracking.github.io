
@model ResetPasswordModel

@{
    ViewData["Title"] = "Şifremi Sıfırla";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="~/userTemplate/tekmer-logo1.jpg" alt="logo">
    </div>
    <h4>Merhaba!</h4>
    <h6 class="font-weight-light">Şifrenizi sıfırlamak için bilgilerinizi girin.</h6>

  

    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="pt-3">
        <input type="hidden" asp-for="Token" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input class="form-control form-control-lg" asp-for="Email" placeholder="E-Posta" readonly>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="form-control form-control-lg" asp-for="Password" placeholder="Şifre">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">ŞİFREMİ SIFIRLA</button>
        </div>
    </form>
</div>

