
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="~/userTemplate/tekmer-logo1.jpg" alt="logo">
    </div>
    <h4>Şifremi sıfırla</h4>
    <h6 class="font-weight-light">Şifrenizi sıfırlamak için kayıtlı e-posta adresinizi girmelisiniz.</h6>
    <form class="contact-form-box mb-5" asp-controller="account" asp-action="forgotPassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">E-Mail</span>
                </div>
                <input type="email" class="form-control" name="Email" aria-label="Default" aria-describedby="inputGroup-sizing-default" required>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">GÖNDER</button>
            </div>
        </div>
    </form>
</div>

