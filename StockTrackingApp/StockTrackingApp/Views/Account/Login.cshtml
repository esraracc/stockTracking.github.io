@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="/theme/tekmer-logo1.jpg" alt="logo">
    </div>
    <h4>Merhaba! Başlayalım</h4>
    <h6 class="font-weight-light">Devam etmek için oturum açın.</h6>
    <form method="post" class="pt-3" asp-controller="Account" asp-action="Login">
        <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
            <ul>
                <li style="display:none"></li>
            </ul>
        </div>
        <div class="form-group">
            <input type="email" class="form-control form-control-lg" asp-for="Email" placeholder="E-Posta" required data-val="true" data-val-required="E-Posta adresi girilmesi zorunludur" name="Email" value="">
        </div>
        <div class="form-group">
            <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Şifre" required data-val="true" data-val-required="&#x15E;ifre girilmesi zorunludur" name="Password">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">GİRİŞ YAP</button>
        </div>
        <div class="my-2 d-flex justify-content-between align-items-center">
            <a href="/account/forgotPassword" class="auth-link text-black">Parolanızı mı unuttunuz?</a>
        </div>
    </form>
</div>
